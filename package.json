{
    "name": "jstracetoix",
    "description": "An expression tracer for debugging React or Vue components, arrow functions, method chaining and expressions",
    "version": "1.1.0",
    "publisher": "a-bentofreire",
    "type": "module",
    "keywords": [
        "debugging",
        "logging",
        "react",
        "vue",
        "log",
        "expression",
        "arrow functions",
        "tracer"
    ],
    "readme": "README.md",
    "readmeFilename": "README.md",
    "author": {
        "name": "Alexandre Bento Freire",
        "email": "devtoix@a-bentofreire.com",
        "url": "https://github.com/a-bentofreire"
    },
    "license": "MIT",
    "engines": {
        "node": "*"
    },
    "homepage": "https://www.devtoix.com/en/projects/jstracetoix/",
    "bugs": "https://github.com/a-bentofreire/jstracetoix/issues",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/a-bentofreire/jstracetoix.git"
    },
    "main": "./node/jstracetoix.mjs",
    "scripts": {
        "lint": "npx eslint . --ignore-pattern '**/*.*js'",
        "npm:publish": "npm publish",
        "npm:publish-dry-run": "npm publish --dry-run",
        "prepublishOnly": "npm run lint --fix && npm run build && npm run test && npm run build-docs",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js npx jest --rootDir __tests__ .",
        "build": "node build.js",
        "build-docs": "typedoc --tsconfig tsconfig.json --out docs ./jstracetoix.ts",
        "run-example-README": "node examples/example-README.js",
        "run-example-multithreading-README": "node examples/example-multithreading-README.js",
        "run-example-nodejs": "node examples/example-nodejs.js"
    },
    "devDependencies": {
        "@types/node": "^22.7.5",
        "@typescript-eslint/eslint-plugin": "^8.8.1",
        "@typescript-eslint/parser": "^8.8.1",
        "esbuild": "^0.24.0",
        "eslint": "^9.12.0",
        "jest": "^29.7.0",
        "jstracetoix": "^1.0.0",
        "typedoc": "^0.26.8",
        "typescript": "^4.7.4"
    }
}
